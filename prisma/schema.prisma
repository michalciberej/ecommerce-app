generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String @unique
  price Int
  order Order[]
}

model Order {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  quantity Int
  productId String @db.ObjectId
  product Product @relation(fields: [productId], references: [id])
}
